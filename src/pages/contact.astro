---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import { SectionHeading } from '@components/ui/section-heading'
import { SpotlightNew } from '@components/ui/spotlight'
import { WobbleCard } from '@components/ui/wobble-card'

const contactMethods = [
  {
    title: "Discord",
    description: "The fastest way to reach us. Join our server and message any executive.",
    link: "https://discord.gg/duca",
    linkText: "Join Discord",
    icon: "ðŸ’¬",
  },
  {
    title: "Email",
    description: "For formal inquiries, partnerships, or sponsorship discussions.",
    link: "mailto:duca@deakin.edu.au",
    linkText: "Send Email",
    icon: "ðŸ“§",
  },
  {
    title: "Instagram",
    description: "Follow us for event updates, photos, and community highlights.",
    link: "https://instagram.com/duca.deakin",
    linkText: "@duca.deakin",
    icon: "ðŸ“¸",
  },
  {
    title: "LinkedIn",
    description: "Connect with us professionally and stay updated on opportunities.",
    link: "https://linkedin.com/company/duca-deakin",
    linkText: "Follow Us",
    icon: "ðŸ’¼",
  },
]
---

<DefaultLayout title="Contact">
  <!-- Hero Section -->
  <section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden bg-black">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-900/20 via-black to-black"></div>
    <SpotlightNew className="-top-40 right-0 md:right-60 md:-top-20" fill="#3b82f6" client:load />
    <div class="absolute inset-0 bg-grid-white/[0.02] bg-[size:50px_50px]"></div>

    <div class="relative z-10 container mx-auto px-4 py-20 text-center">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
        <span class="bg-gradient-to-r from-blue-400 to-cyan-500 bg-clip-text text-transparent">Contact Us</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Have questions? Want to partner with us? We'd love to hear from you!
      </p>
    </div>
  </section>

  <!-- Contact Methods -->
  <section class="py-24 bg-black">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {contactMethods.map((method) => (
          <div class="p-8 rounded-2xl bg-gradient-to-b from-slate-800/30 to-slate-900/50 border border-slate-700/50 hover:border-blue-500/30 transition-colors">
            <div class="text-4xl mb-4">{method.icon}</div>
            <h3 class="text-xl font-bold text-white mb-2">{method.title}</h3>
            <p class="text-gray-400 mb-4">{method.description}</p>
            <a
              href={method.link}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-blue-400 hover:text-blue-300 font-medium"
            >
              {method.linkText}
              <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Discord CTA -->
  <section class="py-24 bg-black">
    <div class="container mx-auto px-4">
      <WobbleCard
        containerClassName="bg-indigo-900 min-h-[300px]"
        client:visible
      >
        <div class="max-w-xl">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
            Join Our Community
          </h2>
          <p class="text-indigo-200 mb-6">
            The best way to stay connected and get quick responses is through our Discord server.
            Our community is active, friendly, and always happy to help!
          </p>
          <a
            href="https://discord.gg/duca"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-6 py-3 rounded-full bg-white text-indigo-900 font-semibold hover:bg-gray-100 transition-colors"
          >
            Join Discord Server
          </a>
        </div>
      </WobbleCard>
    </div>
  </section>

  <!-- Location Info -->
  <section class="py-24 bg-black border-t border-slate-800">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Find Us"
        subtitle="We're based at Deakin University campuses"
        client:visible
      />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        <div class="p-8 rounded-2xl bg-slate-900/50 border border-slate-800">
          <h3 class="text-xl font-bold text-white mb-4">Burwood Campus</h3>
          <p class="text-gray-400 mb-2">221 Burwood Hwy</p>
          <p class="text-gray-400 mb-2">Burwood VIC 3125</p>
          <p class="text-gray-500 text-sm">Main meeting location for most events</p>
        </div>
        <div class="p-8 rounded-2xl bg-slate-900/50 border border-slate-800">
          <h3 class="text-xl font-bold text-white mb-4">Geelong Waurn Ponds Campus</h3>
          <p class="text-gray-400 mb-2">75 Pigdons Rd</p>
          <p class="text-gray-400 mb-2">Waurn Ponds VIC 3216</p>
          <p class="text-gray-500 text-sm">Regular events for Geelong members</p>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>

<style is:global>
  body {
    background-color: #000;
    color: #fff;
  }
</style>
