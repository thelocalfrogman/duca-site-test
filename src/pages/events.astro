const pastEvents = [
  {
    id: 5,
    title: "Welcome Week BBQ",
    date: "Feb 1, 2026",
    description: "A great start to the semester with food and networking!",
    category: "Social",
  },
  {
    id: 6,
    title: "Linux Basics Workshop",
    date: "Jan 25, 2026",
