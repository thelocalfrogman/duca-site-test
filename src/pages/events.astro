    title: "CTF Competition Night",
    date: "Feb 22, 2026",
    time: "5:00 PM - 9:00 PM",
    location: "Online",
    description: "Join us for an exciting Capture The Flag competition with prizes!",
    category: "Competition",
    registrationUrl: "https://humanitix.com",
  },
  {
    id: 3,
    title: "Industry Night: CyberCX",
    date: "Mar 1, 2026",
