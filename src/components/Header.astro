---
import Navigation from '../components/Navigation.astro'
import { DarkMode, Link, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website with dynamic navigation
 */
---

<header>
    <SkipLink />
    <Navigation>
        <li class="menu-item">
            <Link href="/">Home</Link>
        </li>
        <li class="menu-item">
            <Link href="/about/">About</Link>
        </li>
        <li class="menu-item">
            <Link href="/events/">Events</Link>
        </li>
        <li class="menu-item">
            <Link href="/projects/">Projects</Link>
        </li>
        <li class="menu-item">
            <Link href="/blog/">Blog</Link>
        </li>
        <li class="menu-item">
            <Link href="/partners/">Partners</Link>
        </li>
        <li class="menu-item">
            <Link href="/contact/">Contact</Link>
        </li>
        <li class="menu-item">
            <Link href="/calendar/">Calendar</Link>
        </li>
        <li class="menu-item highlight">
            <Link href="/join/">Join Us</Link>
        </li>
        <li class="menu-item type-icon animate-rotate">
            <DarkMode>
                <Icon aria-hidden="true" name="lucide:moon" slot="light" />
                <Icon aria-hidden="true" name="lucide:sun" slot="dark" />
            </DarkMode>
        </li>
    </Navigation>
</header>

<style lang="scss" is:global>
    header {
        background-color: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        position: sticky;
        top: 0;
        z-index: 100;

        .type-icon {
            display: block;
            margin-inline: -7px;

            svg {
                inline-size: 30px;
                block-size: 30px;
            }
        }

        // Highlight style for Join Us button
        .highlight a {
            background: linear-gradient(135deg, #d648ff 0%, #7c3aed 100%);
            padding: 0.5rem 1rem !important;
            border-radius: 9999px;
            color: white !important;
            font-weight: 600;
            transition: all 0.2s ease;

            &:hover {
                transform: scale(1.05);
                box-shadow: 0 0 20px rgba(214, 72, 255, 0.4);
            }
        }
    }
</style>
