---
import { Image } from 'astro:assets'
import { Heading, Link } from 'accessible-astro-components'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
    <section class="py-20">
        <Heading level="h2" class="sr-only">Footer</Heading>
        <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
            <div class="flex flex-col gap-4 md:col-span-2">
                <Image src={Astro.resolve('/global/duca-logo.webp')} alt="DUCA logo" width={75} height={75} loading="lazy" />
                <p class="leading-[1.75]">
                    The Deakin University Cybersecurity Association (DUCA) is a student-led community driven by the
                    ambition and dedication of its members. DUCA is a launchpad for the next generation of cybersecurity
                    professionals.
                </p>
            </div>
            <div class="flex flex-col gap-4">
                <Heading level="h3" size="h6">Pages</Heading>
                <ul class="flex flex-col gap-2">
                    <li><Link href={Astro.resolve('/')}>Home</Link></li>
                    <li><Link href={Astro.resolve('/about')}>About</Link></li>
                    <li><Link href={Astro.resolve('/meet-the-team')}>Meet The Team</Link></li>
                    <li><Link href={Astro.resolve('/get-involved')}>Get Involved</Link></li>
                </ul>
            </div>
            <div class="flex flex-col gap-4">
                <Heading level="h3" size="h6">Our Address</Heading>
                <p class="leading-normal">
                    Deakin University,<br />
                    221 Burwood Highway, <br />
                    Burwood, VIC 3125.
                </p>
                <a href="mailto:info@duca.au">info@duca.au</a>
            </div>
        </div>
    </section>
    <section class="py-8">
        <div class="container flex flex-col justify-center gap-4 md:flex-row">
            <p>
                Copyright DUCA &copy; {currentYear}. All Rights Reserved.
            </p>
        </div>
    </section>
</footer>

<style>
    section {
        border-top: 1px solid var(--border-color-subtle);
    }
</style>
